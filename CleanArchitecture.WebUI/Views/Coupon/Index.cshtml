@model IEnumerable<CleanArchitecture.WebUI.Models.Coupon>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-success bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2" localize-content>Coupon List</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row pb-3">
			<div class="col-6 offset-6 text-end">
				<a asp-controller="Coupon" asp-action="CreateCoupon" class="btn btn-secondary">
					<i class="bi bi-plus-circle"></i> <localize>Create New Coupon</localize>
				</a>
			</div>
		</div>
		<table class="table">
			<thead>
				<tr>
					<th localize-content>
						Coupon Code
					</th>
					<th localize-content>
						Discount Amount
					</th>
					<th localize-content>
						Minimum Amount
					</th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							@item.CouponCode
						</td>
						<td>
							@((item.DiscountAmount).ToString("c"))
						</td>
						<td>
							@((item.MinAmount).ToString("c"))
						</td>
						<td>
							<a asp-action="UpdateCoupon" asp-controller="Coupon" asp-route-id="@item.CouponId" class="btn btn-warning">
								<i class="bi bi-pencil-square"></i>
							</a>
						</td>
						<td>
							<a asp-action="DeleteCoupon" asp-controller="Coupon" asp-route-id="@item.CouponId" class="btn btn-danger">
								<i class="bi bi-trash"></i>
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>

	</div>

</div>


