        <li class="nav-item">
            <a class="nav-link" href="#">Hello @User.Identity.Name</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Access" asp-action="Logout">Logout</a>
        </li>
    }
    else
    { 
