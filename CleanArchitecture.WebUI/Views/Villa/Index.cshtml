@model List<CleanArchitecture.WebUI.Models.Villa>
@{
    ViewData["Title"] = "Index";
}
﻿@{
    var culture = CultureInfo.CurrentCulture.Name;
}
<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2" localize-content>Hotel List</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <div class="row pb-3">
            <div class="col-6 offset-6 text-end">
                <a asp-route-culture="@culture" asp-controller="Villa" asp-action="Create" class="btn btn-secondary">
                    <i class="bi bi-plus-circle"></i> <localize> Create New Hotel</localize>
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th localize-content>
                        Name
                    </th>
                    <th localize-content>Price</th>
                    <th localize-content>SquareFeet</th>
                    <th localize-content>Occupancy</th>
                    <th></th>
                </tr>
            </thead>
             <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.Price</td>
                        <td>@obj.SquareFeet</td>
                        <td>@obj.Occupancy</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Villa" asp-action="Update" asp-route-villaId="@obj.Id"
                                   class="btn btn-success mx-2">
                                    <i class="bi bi-pencil-square"></i> <localize>Edit</localize>
                                </a>
                                <a asp-controller="Villa" asp-action="Delete" asp-route-villaId="@obj.Id"
                                   class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> <localize>Delete</localize>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody> 
        </table>
    </div>
</div>

