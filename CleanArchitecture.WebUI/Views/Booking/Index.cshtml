@using CleanArchitecture.WebUI.Utilities
@{
    ViewData["Title"] = "Index";
}
@{
    var status = Context.Request.Query["status"];

    var approved = "";
    var pending = "";
    var checkedIn = "";
    var completed = "";
    var cancelled = "";
    var all = "";


    switch (status)
    {
        case Constants.StatusPending:
            pending = "text-white bg-success";
            break;
        case Constants.StatusApproved:
            approved = "text-white bg-success";
            break;
        case Constants.StatusCheckedIn:
            checkedIn = "text-white bg-success";
            break;
        case Constants.StatusCompleted:
            completed = "text-white bg-success";
            break;
        case Constants.StatusCancelled:
            cancelled = "text-white bg-success";
            break;
        default:
            all = "text-white bg-success";
            break;
    }
}

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2" localize-content>Booking List</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <div class="d-flex justify-content-end pb-4 pt-2">
            <ul class="list-group list-group-horizontal-sm">
                <a style="text-decoration:none;" asp-controller="Booking" asp-action="Index"
                    asp-route-status="@Constants.StatusPending">
                <li class="list-group-item @pending" localize-content> @Constants.StatusPending </li>
                </a>
                <a style="text-decoration:none;" asp-controller="Booking" asp-action="Index"
                   asp-route-status="@Constants.StatusApproved">
                <li class="list-group-item @approved" localize-content> @Constants.StatusApproved </li>
                </a>
                <a style="text-decoration:none;" asp-controller="Booking" asp-action="Index"
                   asp-route-status="@Constants.StatusCheckedIn">
                <li class="list-group-item @checkedIn" localize-content> @Constants.StatusCheckedIn </li>
                </a>
                <a style="text-decoration:none;" asp-controller="Booking" asp-action="Index"
                   asp-route-status="@Constants.StatusCompleted">
                <li class="list-group-item @completed" localize-content> @Constants.StatusCompleted </li>
                </a>
                <a style="text-decoration:none;" asp-controller="Booking" asp-action="Index"
                   asp-route-status="@Constants.StatusCancelled">
                <li class="list-group-item @cancelled" localize-content> @Constants.StatusCancelled </li>
                </a>
                <a style="text-decoration:none;" asp-controller="Booking" asp-action="Index">
                <li class="list-group-item" localize-content> All </li>
                </a>
            </ul>
        </div>
        <table id="tblBookings" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th localize-content>Name</th>
                    <th localize-content>Phone</th>
                    <th>Email</th>
                    <th localize-content>Status</th>
                    <th localize-content>Check In Date</th>
                    <th localize-content>Nights</th>
                    <th localize-content>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                
            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/booking.js" asp-append-version="true"></script>
}

